version: "2.3"

services:
  claire:
    image: nginx
    volumes:
     - /home/claire/www:/usr/share/nginx/html:ro
     - /srv/volumes/claire-nginx.conf:/etc/nginx/nginx.conf:ro
    networks:
      {{ docker_net.name }}:
        ipv4_address: {{ docker_net.ips.claire }}

networks:
  {{ docker_net.name }}:
    external: true
