global
    daemon
    maxconn 1024
    pidfile /var/run/haproxy.pid

defaults
    balance roundrobin
    timeout client 60s
    timeout connect 60s
    timeout server 60s

frontend http
    bind :80
    mode http

    acl acl_claire hdr(host) -i claire.kippou.fr
    use_backend claire if acl_claire

backend claire
    mode http
    server server1 {{ docker_net.ips['claire'] }}:80
